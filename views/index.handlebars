<h1>Eat-Da-Burger!</h1>

<h2>Burgers you can devour!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
      {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

{{!-- <h2>Add a Cat</h2> --}}
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="ca">Cat Name:</label> --}}
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Submit</button>

  <p>Enter a burger you want to eat. Click the 'Submit' button.</p>
</form>
